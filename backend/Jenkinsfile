pipeline {
    agent any
  tools {
    gradle 'gradle'
  }
  stages {
    stage('Prepare') {
      steps {
        checkout scm
        }
        post {
          success {
            echo "prepare stage success"
            echo pwd
          }
          failure {
            echo "prepare stage failed"
          }
        }
    }
    stage('Backend Build') {
      steps {
        dir('./backend') {
            echo "here is backend"
            sh 'docker stop backend || true && docker rm backend || true && docker rmi backend || true'
            sh 'docker build -t backend .'
            sh 'docker run -it -d --rm -p 8080:8080 --name backend backend'
            sh 'docker rmi -f $(docker images -f "dangling=true" -q) || true'
            echo "Run backend"
        }
      }
      post {
        always {
            echo "build stage complete"
        }
        failure {
            echo "build failed"
        }
        success {
            echo "build success"
        }
      }
    }
  }
}